<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/toolbarColor</item>
    </style>

    <style name="TabLayoutTheme" parent="TextAppearance.AppCompat.Title.Inverse">
        <item name="android:letterSpacing">0.15</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#3f3a3a</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:backgroundTint">#f5f5f5</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
